{
  "name": "sonantica-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Sonántica - Audio-first multimedia player",
  "scripts": {
    "dev": "pnpm --filter @sonantica/web dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean"
  },
  "keywords": [
    "audio",
    "player",
    "multimedia",
    "pwa"
  ],
  "author": "Sonántica Team",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "vite": "*",
        "tailwindcss": "*"
      }
    }
  },
  "devDependencies": {
    "@sonantica/lyrics": "workspace:^",
    "vite-plugin-pwa": "0.21.1",
    "workbox-build": "7.4.0",
    "workbox-window": "7.4.0"
  }
}