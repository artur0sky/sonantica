# Sonántica Environment Variables (Example)
TZ=America/Chihuahua
ENCODING=UTF-8

# ============================================
# WEB SERVICE
# ============================================
WEB_PORT=3000
NODE_ENV=production

# ============================================
# CORE SERVICES
# ============================================
# Go Core Streamer
CORE_PORT=8090

# Persistence & Data
# Persistence & Data
POSTGRES_USER=sonantica
PSQL_PASSWORD=sonantica
# Name of the database to be created
POSTGRES_DB=sonantica
PSQL_PORT=5432

# Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD='sonantica'

# CORS & Security
# CORS & Security
# Must include all origins accessing the API. Supports GET, POST, PUT, DELETE, PATCH, OPTIONS.
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost,capacitor://localhost,http://192.168.100.6:3000,http://192.168.100.6:5173,http://192.168.100.6,https://sonantica.local

# ============================================
# MEDIA PATHS & VOLUMES
# ============================================
# Local media directory - Where your music library lives
MEDIA_PATH=./media

# Additional storage buckets
BUCKETS_PATH=./buckets

# Configuration persistence
CONFIG_PATH=./config

# Cache
COVER_PATH=./covers

# ============================================
# DEVELOPMENT
# ============================================
DEV_PORT=5173

# ============================================
# ANALYTICS (Optional)
# ============================================
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90

# ============================================
# LOGGING & OBSERVABILITY
# ============================================
# Levels: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO
# Formats: "json" (Production/Loki), "text" (Development/Readable)
LOG_FORMAT=json
# Enable/Disable logging
LOG_ENABLED=true

# ============================================
# PRODUCTION SETTINGS (Required for Prod/HTTPS)
# ============================================
DOMAIN_NAME=sonantica.local
ACME_EMAIL=admin@example.com

# ============================================
# AI PLUGINS (Optional - Opt-in)
# ============================================
# Enable AI capabilities with: docker compose --profile ai up
# Requires: NVIDIA GPU with Docker GPU runtime installed

# Security: Internal API authentication between Core and Plugins
# Generate with: openssl rand -hex 32
INTERNAL_API_SECRET=generate-secure-token-here

# Resource Management
AI_JOB_TIMEOUT=600

# Demucs Plugin: Stem Separation (Very Heavy)
DEMUCS_MAX_CONCURRENT_JOBS=2
DEMUCS_COOLDOWN_SECONDS=45

# Brain Plugin: Audio Similarity & Recommendations
BRAIN_MAX_CONCURRENT_JOBS=2
BRAIN_COOLDOWN_SECONDS=30
AI_EMBEDDING_MODEL=laion/clap-htsat-unfused
AI_EMBEDDING_DIM=512

# Knowledge Plugin: Artist/Album Enrichment via Ollama
# Point to your Ollama instance (local or remote)
KNOWLEDGE_MAX_CONCURRENT_JOBS=5
KNOWLEDGE_COOLDOWN_SECONDS=60
OLLAMA_HOST=http://host.docker.internal:11434
AI_KNOWLEDGE_CACHE_TTL=168  # Hours (7 days default)

# ============================================
# SONÁNTICA VERSION
# ============================================
SONANTICA_VERSION=0.1.0
