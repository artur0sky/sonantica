# Sonántica Environment Variables (Example)
TZ=America/Chihuahua
ENCODING=UTF-8

# ============================================
# WEB SERVICE
# ============================================
WEB_PORT=3000
NODE_ENV=production

# ============================================
# CORE SERVICES
# ============================================
# Go Core Streamer
CORE_PORT=8090

# Persistence & Data
# Persistence & Data
POSTGRES_USER=sonantica
PSQL_PASSWORD=sonantica
# Name of the database to be created
POSTGRES_DB=sonantica
PSQL_PORT=5432

# Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD='sonantica'

# CORS & Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost,capacitor://localhost

# ============================================
# MEDIA PATHS & VOLUMES
# ============================================
# Local media directory - Where your music library lives
MEDIA_PATH=./media

# Additional storage buckets
BUCKETS_PATH=./buckets

# Configuration persistence
CONFIG_PATH=./config

# Cache
COVER_PATH=./covers

# ============================================
# DEVELOPMENT
# ============================================
DEV_PORT=5173

# ============================================
# ANALYTICS (Optional)
# ============================================
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90

# ============================================
# SONÁNTICA VERSION
# ============================================
SONANTICA_VERSION=0.1.0
