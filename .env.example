# Sonántica Environment Variables (Example)
TZ=America/Chihuahua
ENCODING=UTF-8

# ============================================
# WEB SERVICE
# ============================================
WEB_PORT=3000
NODE_ENV=production

# ============================================
# CORE SERVICES
# ============================================
# Go Core Streamer
CORE_PORT=8090

# Persistence & Data
PSQL_USER=sonantica
PSQL_PASSWORD=sonantica
PSQL_NAME=sonantica
PSQL_PORT=5432

# Cache
REDIS_HOST=redis
REDIS_PORT=6379

# ============================================
# MEDIA PATHS & VOLUMES
# ============================================
# Local media directory - Where your music library lives
MEDIA_PATH=./media

# Additional storage buckets
BUCKETS_PATH=./buckets

# Configuration persistence
CONFIG_PATH=./config

# ============================================
# DEVELOPMENT
# ============================================
DEV_PORT=5173

# ============================================
# SONÁNTICA VERSION
# ============================================
SONANTICA_VERSION=0.1.0
