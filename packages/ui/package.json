{
    "name": "@sonantica/ui",
    "version": "0.1.0",
    "description": "Shared UI components for Sonántica - Audio-first multimedia player",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts",
        "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
        "clean": "rimraf dist"
    },
    "peerDependencies": {
        "@tabler/icons-react": "^3.24.0",
        "framer-motion": "^12.0.0",
        "react": "^19.2.0",
        "react-dom": "^19.2.0"
    },
    "dependencies": {
        "@sonantica/audio-analyzer": "workspace:*",
        "@sonantica/media-library": "workspace:*",
        "@sonantica/player-core": "workspace:*",
        "@sonantica/shared": "workspace:*",
        "clsx": "^2.1.1",
        "tailwind-merge": "^2.6.0",
        "zustand": "^5.0.2"
    },
    "devDependencies": {
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "autoprefixer": "^10.4.20",
        "postcss": "^8.4.49",
        "tailwindcss": "^3.4.17",
        "tsup": "^8.3.5",
        "typescript": "^5.7.2"
    },
    "keywords": [
        "sonantica",
        "ui",
        "components",
        "react",
        "audio",
        "player"
    ],
    "author": "Sonántica Team",
    "license": "Apache-2.0"
}