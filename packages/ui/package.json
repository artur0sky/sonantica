        "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
        "clean": "rimraf dist"
    },
    "peerDependencies": {
        "@tabler/icons-react": "3.36.0",
        "framer-motion": "12.23.26",
        "react": "19.2.3",
        "react-dom": "19.2.3"
    },
    "dependencies": {
        "@dnd-kit/core": "6.3.1",
        "@dnd-kit/sortable": "10.0.0",
        "@dnd-kit/utilities": "3.2.2",
        "@nivo/bar": "0.99.0",
        "@nivo/bump": "0.99.0",
        "@nivo/calendar": "0.99.0",
        "@nivo/colors": "0.99.0",
        "@nivo/core": "0.99.0",
        "@nivo/heatmap": "0.99.0",
        "@nivo/line": "0.99.0",
        "@nivo/pie": "0.99.0",
        "@nivo/tooltip": "0.99.0",
