{
    "name": "@sonantica/ui",
    "version": "0.1.0",
    "description": "Shared UI components for Sonántica - Audio-first multimedia player",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
